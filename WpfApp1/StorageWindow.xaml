<Window x:Class="WpfApp1.StorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="StorageWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgStorages" HorizontalAlignment="Left" Height="266" Margin="129,83,0,0" VerticalAlignment="Top" Width="571"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Storage Id" Binding="{Binding Path=StorageId}"/>
                <DataGridTextColumn Header="Storage Name" Binding="{Binding Path=StorageName}"/>
                <DataGridTextColumn Header="Kind of Storage" Binding="{Binding Path=KindOfStorage}"/>
       
               
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
